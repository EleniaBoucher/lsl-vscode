{
	"do...while loop": {
		"prefix": "do",
		"body": [
			"do",
			"{",
			"\t$0",
			"} while (${true});"
		],
		"description": "do...while loop"
    },    
    "for loop": {
        "prefix": "for",
        "body": [
            "integer ${i};",
            "for (${i} = 0; ${i} < ${length}; ${i}++)",
            "{",
            "\t$0",
            "}"
        ],
        "description": "for loop"
    },
    "Reverse for loop": {
        "prefix": "forr",
        "body": [
            "integer ${i};",
            "for ({i} = ${length} - 1; {i} >= 0; {i}--)",
            "{",
            "\t$0",
            "}"
        ],
        "description": "Reverse for loop"
    },    
    "if statement": {
		"prefix": "if",
		"body": [
			"if (${true})",
			"{",
			"\t$0",
			"}"
		],
		"description": "if statement"
    },    
	"else statement": {
		"prefix": "else",
		"body": [
			"else",
			"{",
			"\t$0",
			"}"
		],
		"description": "else statement"
    },
    "while loop": {
		"prefix": "while",
		"body": [
			"while (${true})",
			"{",
			"\t$0",
			"}"
		],
		"description": "while loop"
    },
    "named state": {
        "prefix": "state",
        "body": [
            "state ${name}",
            "{",
            "\tstate_entry()",
            "\t{",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "named state"
    },
    "default state": {
        "prefix": "default",
        "body": [
            "default",
            "{",
            "\tstate_entry()",
            "\t{",
            "\t\t$0",
            "\t}",
            "}"
        ],
        "description": "default state"
    }    
}
