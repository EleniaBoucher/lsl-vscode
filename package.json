{
    "name": "lsl",
    "displayName": "LSL",
    "description": "LSL language support for Visual Studio Code",
    "version": "0.1.0",
    "publisher": "ebickle",
    "license": "MIT",    
    "repository": {
        "type": "git",
        "url": "https://github.com/ebickle/lsl-vscode.git"
    },    
    "engines": {
        "vscode": "^1.11.0"
    },
    "categories": [
        "Languages"
    ],
    "preview": true,
    "activationEvents": [
        "onLanguage:lsl"
    ],    
    "main": "./out/src/extension",    
    "contributes": {
        "languages": [{
            "id": "lsl",
            "aliases": [
                "LSL",
                "Linden Scripting Language"
            ],
            "extensions": [".lsl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "lsl",
            "scopeName": "source.lsl",
            "path": "./syntaxes/lsl.tmLanguage"
        }]
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }        
}